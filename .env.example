# ===========================================
# Mobile Pass Infrastructure - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values.
# DO NOT commit .env to version control.
# ===========================================

# ===========================================
# General Settings
# ===========================================
NODE_ENV=production

# ===========================================
# Database Configuration (SQL Server)
# ===========================================
DB_SERVER=your-database-server
DB_PORT=1433
DB_NAME=MobilePass
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=true

# ===========================================
# JWT Authentication
# ===========================================
# IMPORTANT: Generate a strong secret for production
# Example: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=https://your-frontend-domain.com,http://localhost:3000

# ===========================================
# Google Wallet Configuration
# ===========================================
GOOGLE_SERVICE_ACCOUNT_PATH=/app/certs/google-service-account.json
GOOGLE_ISSUER_ID=your-google-issuer-id
GOOGLE_STORAGE_BUCKET=

# ===========================================
# Huawei Wallet Configuration
# ===========================================
HUAWEI_APP_ID=your-huawei-app-id
HUAWEI_APP_SECRET=your-huawei-app-secret
HUAWEI_ISSUER_ID=your-huawei-issuer-id
HUAWEI_PASS_SIGNING_KEY_PATH=/app/certs/huawei/private-key.pem
HUAWEI_PASS_SIGNING_CERT_PATH=/app/certs/huawei/certificate.cer

# ===========================================
# Apple Wallet / APNS Configuration
# ===========================================
APNS_KEY_PATH=/app/certs/apple/AuthKey_XXXXXXXXXX.p8
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_PRODUCTION=true

# ===========================================
# Service URLs
# ===========================================
IMAGE_HOST_URL=https://your-api-domain.com/api/passes/images/
DEFAULT_ORG_NAME=Your Organization Name
PASS_CONVERTER_URL=http://pass-converter:3002
HUAWEI_PASS_CONVERTER_URL=http://pass-converter-huawei:3003

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=https://your-api-domain.com/api
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_APP_NAME=Pass Generator
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Generate mobile wallet passes easily
FRONTEND_API_URL=http://pass-generator-api:3001/api

# ===========================================
# Pass Converter Ports (usually no need to change)
# ===========================================
PASS_CONVERTER_BIND_HOST=0.0.0.0
PASS_CONVERTER_BIND_PORT=3002
HUAWEI_CONVERTER_BIND_HOST=0.0.0.0
HUAWEI_CONVERTER_BIND_PORT=3003

# ===========================================
# API Port (usually no need to change)
# ===========================================
PORT=3001
